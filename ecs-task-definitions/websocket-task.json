{
  "family": "directfanz-websocket",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/directfanz-task-role",
  "containerDefinitions": [
    {
      "name": "directfanz-websocket",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/directfanz-websocket:latest",
      "portMappings": [
        {
          "containerPort": 3001,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/directfanz-websocket",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "WEBSOCKET_PORT",
          "value": "3001"
        },
        {
          "name": "PORT",
          "value": "3001"
        },
        {
          "name": "HOSTNAME",
          "value": "0.0.0.0"
        },
        {
          "name": "AWS_REGION",
          "value": "REGION"
        },
        {
          "name": "ECS_CLUSTER_NAME",
          "value": "directfanz-cluster"
        },
        {
          "name": "ECS_SERVICE_NAME",
          "value": "directfanz-websocket"
        }
      ],
      "secrets": [
        {
          "name": "REDIS_URL",
          "valueFrom": "/directfanz/redis/url"
        },
        {
          "name": "DATABASE_URL",
          "valueFrom": "/directfanz/database/url"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3001/health?source=alb || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      },
      "stopTimeout": 30,
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ]
    }
  ]
}