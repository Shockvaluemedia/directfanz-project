# =================
# MONITORING & LOGGING CONFIGURATION
# =================

# Sentry Configuration (Error Tracking & Performance)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=directfanz
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error
ENABLE_STRUCTURED_LOGGING=true
LOG_FILE_PATH=./logs/app.log

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60000  # 60 seconds
HEALTH_CHECK_TIMEOUT=10000   # 10 seconds

# Alert Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_EMAIL_FROM=alerts@directfanz.io
ALERT_EMAIL_TO=admin@directfanz.io

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000     # 1 second
SLOW_REQUEST_THRESHOLD=2000   # 2 seconds

# External Monitoring Services
UPTIMEROBOT_API_KEY=your-uptimerobot-key
PINGDOM_API_KEY=your-pingdom-key

# Analytics & Metrics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token
ENABLE_ANALYTICS=true

# System Monitoring
ENABLE_SYSTEM_METRICS=true
METRICS_COLLECTION_INTERVAL=30000  # 30 seconds

# =================
# PRODUCTION OVERRIDES
# =================

# Database Configuration for Production
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
DATABASE_POOL_SIZE=20

# Redis Configuration for Production  
REDIS_URL=redis://user:password@host:6379
REDIS_POOL_SIZE=10

# Storage Configuration for Production
UPLOAD_PATH=/var/uploads
AWS_S3_BUCKET=your-s3-bucket
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1

# CDN Configuration
CDN_URL=https://cdn.directfanz.io

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
ENABLE_CORS=true
ALLOWED_ORIGINS=https://directfanz.io,https://www.directfanz.io

# Email Service for Production
EMAIL_SERVICE=sendgrid  # sendgrid, mailgun, ses
SENDGRID_API_KEY=your-sendgrid-key
FROM_EMAIL=noreply@directfanz.io

# Payment Processing (Production)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Content Delivery
ENABLE_CDN=true
CDN_PROVIDER=cloudfront  # cloudfront, cloudflare
ENABLE_IMAGE_OPTIMIZATION=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Feature Flags
FEATURE_MESSAGING=true
FEATURE_LIVE_STREAMING=false
FEATURE_MARKETPLACE=false
FEATURE_MOBILE_APP=true

# =================
# ENVIRONMENT SPECIFIC
# =================

# Base URL for the application
NEXTAUTH_URL=https://directfanz.io
BASE_URL=https://directfanz.io

# SSL Configuration
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Session Configuration
SESSION_TIMEOUT=86400000  # 24 hours
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# API Configuration
API_TIMEOUT=30000      # 30 seconds
API_RATE_LIMIT=1000    # requests per hour per IP

# Content Security
CSP_ENABLED=true
XSS_PROTECTION=true
CONTENT_TYPE_OPTIONS=nosniff