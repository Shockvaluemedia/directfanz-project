{
  "family": "directfanz-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::545582548240:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "directfanz-app",
      "image": "545582548240.dkr.ecr.us-east-1.amazonaws.com/directfanz-production:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "NEXTAUTH_URL",
          "value": "https://directfanz.io"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://directfanz_user:directfanz_secure_password_2024@directfanz-db.cluster-cjmzxvqxvqxv.us-east-1.rds.amazonaws.com:5432/directfanz_production"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://directfanz-redis.abc123.cache.amazonaws.com:6379"
        }
      ],
      "secrets": [
        {
          "name": "NEXTAUTH_SECRET",
          "valueFrom": "arn:aws:ssm:us-east-1:545582548240:parameter/directfanz/nextauth-secret"
        },
        {
          "name": "STRIPE_SECRET_KEY",
          "valueFrom": "arn:aws:ssm:us-east-1:545582548240:parameter/directfanz/stripe-secret-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/directfanz-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3000/api/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}