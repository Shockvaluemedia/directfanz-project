# Production Environment Variables for DirectFanz on Vercel
# Copy these to your Vercel project environment variables

# Database
DATABASE_URL="postgresql://username:password@host:5432/directfanz_production"

# NextAuth.js
NEXTAUTH_SECRET="your-production-secret-64-characters-long"
NEXTAUTH_URL="https://www.directfanz.io"

# Stripe (Use LIVE keys for production)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your_publishable_key"
STRIPE_SECRET_KEY="sk_live_your_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# AWS S3
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="directfanz-production"

# SendGrid
SENDGRID_API_KEY="SG.your_sendgrid_api_key"
FROM_EMAIL="noreply@directfanz.io"

# Redis (Upstash recommended for Vercel)
REDIS_URL="rediss://default:password@host:port"

# Node Environment
NODE_ENV="production"

# Optional: Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN="https://your-dsn@sentry.io/project-id"
SENTRY_ORG="your-org"
SENTRY_PROJECT="directfanz"
SENTRY_AUTH_TOKEN="your_sentry_auth_token"