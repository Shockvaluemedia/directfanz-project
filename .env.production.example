# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Application Configuration
NODE_ENV=production
NEXTAUTH_SECRET=your-super-secure-secret-key-change-this-in-production
NEXTAUTH_URL=https://www.directfanz.io
NEXT_PUBLIC_APP_URL=https://www.directfanz.io
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@your-db-host:5432/direct_fan_platform

# Redis Configuration
REDIS_URL=redis://username:password@your-redis-host:6379

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_SECRET_KEY=sk_live_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-production-bucket

# SendGrid Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@directfanz.io

# Monitoring and Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-public-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Telemetry Configuration
DISABLE_TELEMETRY=false
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
OTEL_SERVICE_NAME=directfanz
OTEL_SERVICE_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/directfanz/app.log

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1
WEB_VITALS_ENDPOINT=/api/web-vitals

# Security Configuration
ENABLE_SECURITY_HEADERS=true
CORS_ORIGIN=https://directfanz.io
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# External Service Monitoring
EXTERNAL_SERVICE_TIMEOUT=10000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIME=60000

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Redis Configuration
REDIS_POOL_MIN=5
REDIS_POOL_MAX=20
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=3000

# Feature Flags
ENABLE_NEW_PAYMENT_FLOW=false
ENABLE_ANALYTICS_TRACKING=true
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_PROFILING=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# CDN Configuration
CDN_URL=https://cdn.directfanz.io
CDN_DOMAIN=cdn.directfanz.io

# Email Configuration
EMAIL_PROVIDER=sendgrid
EMAIL_FROM_NAME=DirectFanz
EMAIL_REPLY_TO=support@directfanz.io

# Social Media Configuration
TWITTER_API_KEY=your_twitter_api_key
FACEBOOK_APP_ID=your_facebook_app_id
INSTAGRAM_CLIENT_ID=your_instagram_client_id

# Third-party Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# Deployment Configuration
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_COMMIT_SHA=commit_sha_from_ci_cd

# Kubernetes Configuration (if using K8s)
K8S_NAMESPACE=directfanz
K8S_SERVICE_ACCOUNT=directfanz-sa

# Load Balancer Configuration
LB_HEALTH_CHECK_PATH=/api/health
LB_HEALTH_CHECK_INTERVAL=30
LB_HEALTHY_THRESHOLD=2
LB_UNHEALTHY_THRESHOLD=3

# Auto-scaling Configuration
AUTO_SCALE_MIN_REPLICAS=2
AUTO_SCALE_MAX_REPLICAS=10
AUTO_SCALE_TARGET_CPU=70
AUTO_SCALE_TARGET_MEMORY=80

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER_SESSION=1800
CACHE_TTL_API_RESPONSES=300
CACHE_TTL_STATIC_CONTENT=86400

# Rate Limiting Configuration
RATE_LIMIT_AUTH_WINDOW=900000
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_API_WINDOW=60000
RATE_LIMIT_API_MAX=100
RATE_LIMIT_UPLOAD_WINDOW=3600000
RATE_LIMIT_UPLOAD_MAX=10

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg
UPLOAD_TIMEOUT=300000

# Notification Configuration
PUSH_NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATION_ENABLED=true
SMS_NOTIFICATION_ENABLED=false

# Session Configuration
SESSION_TIMEOUT=3600000
SESSION_ROLLING=true
SESSION_SECURE=true
SESSION_SAME_SITE=strict