{
  "family": "directfanz-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::545582548240:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "directfanz-app",
      "image": "node:18-alpine",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "workingDirectory": "/app",
      "command": [
        "sh", "-c",
        "apk add --no-cache git curl && git clone https://github.com/Shockvaluemedia/directfanz-project.git . && npm ci && npx prisma generate && npm run build && npm start"
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "NEXTAUTH_URL",
          "value": "https://directfanz.io"
        },
        {
          "name": "NEXTAUTH_SECRET",
          "value": "o5up8Woxtj0Iu0j3yBy+Wl5dynqiJtrmkKz8IlQJQBE="
        },
        {
          "name": "JWT_SECRET",
          "value": "DFbIHLqrPz9+7mTo3QUng2a6rSsHVLKKsHiF01RL9Uk="
        },
        {
          "name": "ENCRYPTION_KEY",
          "value": "126e7caccce86ff1af33a31b6413c1278b87d656101a3530fc17d605cd23a668"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://directfanz_user:directfanz_secure_password_2024@directfanz-db.c8qlvxvqzxvq.us-east-1.rds.amazonaws.com:5432/directfanz_production"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://directfanz-redis.cache.amazonaws.com:6379"
        },
        {
          "name": "PORT",
          "value": "3000"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/directfanz-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 120
      }
    }
  ]
}