# ==============================================
# DIRECTFANZ - ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this to .env.local for development
# For production, set these in your deployment platform (Vercel, Railway, etc.)
#
# Required variables are marked with (REQUIRED)
# Optional variables have sensible defaults

# ==============================================
# APPLICATION
# ==============================================
# Node environment: development, production, or test
NODE_ENV="development"

# Public application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_FRONTEND_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="DirectFanz"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# ==============================================
# DATABASE (REQUIRED)
# ==============================================
# PostgreSQL database URL
# Format: postgresql://username:password@host:5432/database
DATABASE_URL="postgresql://postgres:password@localhost:5432/directfanz"

# ==============================================
# AUTHENTICATION (REQUIRED)
# ==============================================
# NextAuth secret - MUST be unique and random
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="generate-a-secure-random-secret-key-here"

# Auth URL (use your deployed domain in production)
NEXTAUTH_URL="http://localhost:3000"

# JWT secret for API tokens
JWT_SECRET="your-jwt-secret-key-generate-with-openssl"

# Encryption key for sensitive data
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-64-character-hex-encryption-key-here"

# OAuth token encryption (for OAuth providers)
TOKEN_ENCRYPTION_KEY="your-oauth-token-encryption-key"

# ==============================================
# OAUTH PROVIDERS (OPTIONAL)
# ==============================================
# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Facebook OAuth
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""
FACEBOOK_APP_ID=""

# ==============================================
# STRIPE PAYMENT PROCESSING (REQUIRED)
# ==============================================
# Stripe publishable key (use pk_test_ for development)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_publishable_key"

# Stripe secret key (use sk_test_ for development)
STRIPE_SECRET_KEY="sk_test_your_secret_key"

# Stripe webhook secret (get from Stripe dashboard)
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Application fee percentage (platform commission)
APPLICATION_FEE_PERCENTAGE="5"

# Currency code (USD, EUR, GBP, etc.)
CURRENCY="USD"

# ==============================================
# AWS S3 FILE STORAGE (REQUIRED)
# ==============================================
# AWS credentials
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_REGION="us-east-1"

# S3 bucket name for content storage
AWS_S3_BUCKET_NAME="directfanz-content"

# CloudFront CDN domain (optional, for faster delivery)
AWS_CLOUDFRONT_DOMAIN="your-distribution.cloudfront.net"
AWS_CLOUDFRONT_URL="https://your-distribution.cloudfront.net"

# CDN configuration (optional)
CDN_URL=""
CDN_DOMAIN=""

# ==============================================
# EMAIL SERVICES (REQUIRED)
# ==============================================
# Email provider: sendgrid or smtp
EMAIL_PROVIDER="sendgrid"

# SendGrid configuration
SENDGRID_API_KEY="SG.your_sendgrid_api_key"
SENDGRID_FROM_EMAIL="noreply@directfanz.com"
FROM_EMAIL="noreply@directfanz.com"
FROM_NAME="DirectFanz"

# Alternative: Mailgun
MAILGUN_API_KEY=""

# Alternative: SMTP configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# ==============================================
# REDIS CACHE & SESSIONS (REQUIRED)
# ==============================================
# Redis connection URL
# Format: redis://username:password@host:port
REDIS_URL="redis://localhost:6379"

# Or configure individual Redis settings
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# ==============================================
# WEBSOCKET / REAL-TIME (OPTIONAL)
# ==============================================
# WebSocket server URL
NEXT_PUBLIC_WEBSOCKET_URL="ws://localhost:3000"
NEXT_PUBLIC_WS_URL="ws://localhost:3000"

# Pusher (alternative to WebSocket)
PUSHER_APP_ID=""
PUSHER_KEY=""
PUSHER_SECRET=""
PUSHER_CLUSTER="us2"

# ==============================================
# MONITORING & ERROR TRACKING (OPTIONAL)
# ==============================================
# Sentry configuration for error tracking
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_DSN=""
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"
SENTRY_AUTH_TOKEN=""

# Enable error monitoring in production
ENABLE_ERROR_MONITORING="true"

# Vercel Git commit SHA (auto-populated on Vercel)
VERCEL_GIT_COMMIT_SHA=""

# ==============================================
# RATE LIMITING & SECURITY
# ==============================================
# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS="900000"

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS="100"

# CORS allowed origins (comma-separated)
CORS_ORIGIN="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Metrics authentication token
METRICS_AUTH_TOKEN="your-metrics-auth-token"

# ==============================================
# ANALYTICS & TRACKING (OPTIONAL)
# ==============================================
# Google Analytics ID
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Enable user behavior tracking
ENABLE_USER_TRACKING="false"

# Enable business metrics collection
ENABLE_BUSINESS_METRICS="true"

# Anonymize user data in analytics
ANONYMIZE_USER_DATA="true"

# ==============================================
# MEDIA PROCESSING (OPTIONAL)
# ==============================================
# Maximum concurrent transcoding jobs
MAX_CONCURRENT_TRANSCODING_JOBS="4"

# Temporary directory for processing
TEMP_DIR="/tmp"

# ==============================================
# CACHING & PERFORMANCE (OPTIONAL)
# ==============================================
# Memory cache size (number of items)
MEMORY_CACHE_SIZE="1000"

# Memory cache TTL in milliseconds (default: 5 minutes)
MEMORY_CACHE_TTL="300000"

# ==============================================
# BACKUP & DISASTER RECOVERY (OPTIONAL)
# ==============================================
# Backup notification email
BACKUP_NOTIFICATION_EMAIL="admin@directfanz.com"

# Backup storage URL (S3, etc.)
BACKUP_STORAGE_URL=""

# ==============================================
# NOTIFICATIONS (OPTIONAL)
# ==============================================
# Discord webhook for admin notifications
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/your/webhook"

# ==============================================
# BUILD CONFIGURATION (OPTIONAL)
# ==============================================
# Skip type checking during build (not recommended)
SKIP_TYPE_CHECK="0"

# Package version (auto-populated)
npm_package_version=""
