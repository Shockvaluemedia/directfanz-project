# ==============================================
# DIRECTFANZ - PRODUCTION ENV TEMPLATE
# ==============================================
# Copy this to .env.local for development or configure these in your production environment

# ==============================================
# DATABASE
# ==============================================
# Production PostgreSQL database URL (Railway, Supabase, Neon, etc.)
DATABASE_URL="postgresql://username:password@host:5432/dbname"

# ==============================================
# NEXTAUTH CONFIGURATION
# ==============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-nextauth-secret-key-here"
# Production URL (will be your deployed domain)
NEXTAUTH_URL="https://directfanz.io"

# ==============================================
# AI FEATURES CONFIGURATION
# ==============================================
# OpenAI API key for AI features (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY="sk-your_openai_api_key_here"
# OpenAI model to use (gpt-4 for best quality, gpt-3.5-turbo for cost optimization)
OPENAI_MODEL="gpt-4"

# AI Processing Configuration
AI_MAX_TOKENS="2000"
AI_TEMPERATURE="0.3"
AI_MAX_REQUESTS_PER_HOUR="100"

# Content Moderation Thresholds (0-1 scale)
MODERATION_NSFW_THRESHOLD="0.8"
MODERATION_VIOLENCE_THRESHOLD="0.8"
MODERATION_HATE_SPEECH_THRESHOLD="0.7"

# Revenue Optimization Settings
PRICING_TEST_DURATION_DAYS="7"
MIN_PRICE_CHANGE_PERCENT="5"
MAX_PRICE_CHANGE_PERCENT="25"

# ==============================================
# STRIPE PAYMENT PROCESSING
# ==============================================
# Stripe publishable key (starts with pk_live_ for production)
STRIPE_PUBLISHABLE_KEY="pk_live_your_publishable_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your_publishable_key"
# Stripe secret key (starts with sk_live_ for production)
STRIPE_SECRET_KEY="sk_live_your_secret_key"
# Stripe webhook endpoint secret (for webhook verification)
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# ==============================================
# AWS S3 FILE STORAGE
# ==============================================
# AWS access credentials
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
# S3 bucket for content uploads
AWS_S3_BUCKET_NAME="your-directfanz-content"
# CloudFront distribution URL (optional, for CDN)
AWS_CLOUDFRONT_URL="https://your-distribution.cloudfront.net"

# ==============================================
# EMAIL SERVICES
# ==============================================
# SendGrid API key for transactional emails
SENDGRID_API_KEY="SG.your_sendgrid_api_key"
# From email address for system emails
SENDGRID_FROM_EMAIL="noreply@directfanz.io"

# Alternative: NodeMailer SMTP (if not using SendGrid)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# ==============================================
# REDIS CACHE & SESSIONS
# ==============================================
# Redis connection URL (Upstash, Railway, or self-hosted)
REDIS_URL="redis://default:password@host:port"

# ==============================================
# MONITORING & ERROR TRACKING
# ==============================================
# Sentry DSN for error tracking
SENTRY_DSN="https://your-dsn@sentry.io/project-id"
# Sentry auth token (for source maps upload)
SENTRY_AUTH_TOKEN="your_sentry_auth_token"
# Sentry organization and project
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"

# ==============================================
# SECURITY & RATE LIMITING
# ==============================================
# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY="your-64-character-hex-encryption-key"
# JWT secret for API tokens
JWT_SECRET="your-jwt-secret-key"

# ==============================================
# OPTIONAL INTEGRATIONS
# ==============================================
# Google Analytics ID
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Pusher for real-time features (alternative to WebSocket)
# PUSHER_APP_ID="your_app_id"
# PUSHER_KEY="your_key"
# PUSHER_SECRET="your_secret"
# PUSHER_CLUSTER="us2"

# Discord webhook for admin notifications
# DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/your/webhook"

# ==============================================
# NODE ENV & BUILD CONFIG
# ==============================================
NODE_ENV="production"
# Set to 1 to skip type checking during build (faster builds)
SKIP_TYPE_CHECK="0"